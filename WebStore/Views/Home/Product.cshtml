@model DeepProductInfo

@{
    ViewData["Title"] = "Product";
    Layout = "/Views/Shared/_ProductsLayout.cshtml";
}


<main class="container">

    <!-- Left Column / Headphones Image -->
    <!--Carousel Wrapper-->
    <div id="carousel-thumb" class="carousel slide carousel-fade carousel-thumbnails" data-ride="carousel">
        <!--Slides-->
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/@Model.Product.ProductType.ProductSetId/@Model.Product.ProductTypeId/@Model.Product.Id/image1.jpg"
                     alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/@Model.Product.ProductType.ProductSetId/@Model.Product.ProductTypeId/@Model.Product.Id/image2.jpg"
                     alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/@Model.Product.ProductType.ProductSetId/@Model.Product.ProductTypeId/@Model.Product.Id/image3.jpg"
                     alt="Third slide">
            </div>
        </div>
        <!--/.Slides-->
        <!--Controls-->
        <a class="carousel-control-prev" href="#carousel-thumb" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel-thumb" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="row">
        <a target="_blank" href="~/images/@Model.Product.ProductType.ProductSetId/@Model.Product.ProductTypeId/@Model.Product.Id/image1.jpg">
            <img src="~/images/@Model.Product.ProductType.ProductSetId/@Model.Product.ProductTypeId/@Model.Product.Id/image1.jpg" 
                 alt="Forest" style="width:150px">
        </a>
        <a target="_blank" href="~/images/@Model.Product.ProductType.ProductSetId/@Model.Product.ProductTypeId/@Model.Product.Id/image2.jpg">
            <img src="~/images/@Model.Product.ProductType.ProductSetId/@Model.Product.ProductTypeId/@Model.Product.Id/image2.jpg"
                 alt="Forest" style="width:150px">
        </a>
        <a target="_blank" href="~/images/@Model.Product.ProductType.ProductSetId/@Model.Product.ProductTypeId/@Model.Product.Id/image3.jpg">
            <img src="~/images/@Model.Product.ProductType.ProductSetId/@Model.Product.ProductTypeId/@Model.Product.Id/image3.jpg"
                 alt="Forest" style="width:150px">
        </a>
    </div>
    <hr />
    <div class="product-description">
        <h1>@Model.Product.Producer @Model.Product.ModelType.Name</h1>
        <p>@Model.Product.Info</p>
    </div>

    <div class="row" style="float: right; margin-right: 1px">
        <strong style="font-size:x-large; margin-right:20px">$ @Model.Product.Price.ToString("f2")</strong>
        @if (Model.IsAuth)
        {
            <a asp-action="AddToCart" asp-controller="Cart"
               asp-route-productId="@Model.Product.Id"
               asp-route-returnUrl="@HttpUtility.UrlEncode(ViewContext.HttpContext.Request.PathAndQuery())"
               class="btn btn-primary">Add to cart</a>
        }
    </div>
    <br />
    <br />
    <hr />

    <!-- Right Column -->
    <div class="right-column">
        <div>
            <h1>Description</h1>
            <table class="table table-bordered table-striped">
                <tbody>
                    @for (int i = 0; i < Model.Criterias.Length; i++)
                    {
                        <tr>
                            <td>@Model.Criterias[i]</td>
                            <td>@Model.Description[i]</td>
                        </tr>
                    }
                </tbody>
            </table>
            <table>
            </table>
        </div>
    </div>
</main>